class Solution {
public:
    int search(vector<int>& nums, int target) {
        ios_base::sync_with_stdio(false);
        cin.tie(0);
        int lower = 0;
        int upper = nums.size()-1;
        int position;
        while(lower <= upper){
            int middle = lower + (upper - lower) / 2;
            if(target == nums[middle]){
                return middle;
            }
            else if(target > nums[middle]){
                lower = middle + 1 ;
                position = middle + 1;
            }
            else if(target < nums[middle]){
                upper = middle - 1;
                position = middle;
            }
        }
        return -1;
    }
};
