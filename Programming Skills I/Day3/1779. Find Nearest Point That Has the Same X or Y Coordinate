class Solution {
public:
    int nearestValidPoint(int x, int y, vector<vector<int>>& points) {
        int nearest = pow(2,31)-1;
        int pos;
        int check = 0;
        for(int i = 0 ; i < points.size() ; i++){
            int a = points[i][0];
            int b = points[i][1];
            int tmp = abs(x-a) + abs(y-b);
            if(a == x || b == y)
            if(tmp < nearest){
                pos = i;
                check = 1;
                nearest = tmp;
            }
        }
        if(nearest == pow(2,31) - 1){
            return -1;
        }
        else
        return pos;
    }
};
